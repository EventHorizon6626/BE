# Backend API Environment Variables

# Server Configuration
NODE_ENV=production
PORT=4000

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/eventhorizon

# Security
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING
SESSION_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://fe-chi-opal.vercel.app,https://yourdomain.com

# Trust Proxy (for reverse proxy setup)
TRUST_PROXY=1

# AI Service (Event-Horizon-AI on port 8001)
AI_SERVICE_URL=http://localhost:8001
